<odoo>
    <record id="view_mata_pelajaran_form" model="ir.ui.view">
        <field name="name">mata_pelajaran.form</field>
        <field name="model">sekolah.mata_pelajaran</field>
        <field name="arch" type="xml">
            <form string="Mata Pelajaran">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mata_pelajaran_tree" model="ir.ui.view">
        <field name="name">mata_pelajaran.tree</field>
        <field name="model">sekolah.mata_pelajaran</field>
        <field name="arch" type="xml">
            <tree string="Mata Pelajaran">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_mata_pelajaran" model="ir.actions.act_window">
        <field name="name">Mata Pelajaran</field>
        <field name="res_model">sekolah.mata_pelajaran</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Klik untuk membuat mata pelajaran baru.
            </p>
        </field>
    </record>
</odoo>